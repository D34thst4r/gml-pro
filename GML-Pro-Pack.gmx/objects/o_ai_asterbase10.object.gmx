  if ( melted[i,j] &gt; 0 ) {
   ratio=melted[i,j]/100;
   draw_sprite_ext(melted_sprite[i,j],melted_num[i,j],
    i*r1,j*r2,ratio,ratio,(i+j)%360,c_white,ratio);
  }
  if ( heatcold[i,j] &gt; 60 ) {
   ratio=heatcold[i,j]/273.0;
